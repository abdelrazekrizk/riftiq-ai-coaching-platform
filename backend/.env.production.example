# RiftIQ AI Coaching System - Production Environment Template
# Copy this file to .env.production and fill in your actual values

# AWS Configuration
AWS_REGION=us-east-1

# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/database
REDIS_URL=redis://host:6379

# Authentication
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# DynamoDB Tables
DYNAMODB_WEBSOCKET_TABLE=riftiq-websocket-connections-prod
DYNAMODB_SESSIONS_TABLE=riftiq-active-sessions-prod
DYNAMODB_METRICS_TABLE=riftiq-realtime-metrics-prod

# AI/ML Services
BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
SAGEMAKER_ENDPOINT=your-sagemaker-endpoint

# API Configuration
API_GATEWAY_URL=https://your-api-gateway-url/v1
WEBSOCKET_URL=wss://your-websocket-url

# Monitoring
LOG_LEVEL=INFO
ENABLE_XRAY_TRACING=true
POWERTOOLS_SERVICE_NAME=riftiq-ai-coaching
POWERTOOLS_METRICS_NAMESPACE=RiftIQ/Agents